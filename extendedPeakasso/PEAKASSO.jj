			                    valueToBeChanged *= rightParsed;
			                    break;
			            }
	                }
	                break;
	            case "LTE":
	                while (valueToBeChanged <= stopPoint) {
						switch(op) {
			                case "INCREMENT":
			                    valueToBeChanged++;
			                    break;
			                case "DECREMENT":
			                    valueToBeChanged--;
			                    break;
			                case "PLUS_ASSIGN":
			                    valueToBeChanged += rightParsed;
			                    break;
			                case "MINUS_ASSIGN":
			                    valueToBeChanged -= rightParsed;
			                    break;
			                case "ASSIGN":
			                    valueToBeChanged = rightParsed;
			                    break;
			                case "MLTPY_ASSIGN":
			                    valueToBeChanged *= rightParsed;
			                    break;
			            }
	                }
	                break;
	            case "GTE":
	                while (valueToBeChanged >= stopPoint) {
						switch(op) {
			                case "INCREMENT":
			                    valueToBeChanged++;
			                    break;
			                case "DECREMENT":
			                    valueToBeChanged--;
			                    break;
			                case "PLUS_ASSIGN":
			                    valueToBeChanged += rightParsed;
