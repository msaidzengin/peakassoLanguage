			                    valueToBeChanged *= rightParsed;
			                    break;
			            }
	                }
	                break;
	            case "NE":
	                while (valueToBeChanged != stopPoint) {
						switch(op) {
			                case "INCREMENT":
			                    valueToBeChanged++;
			                    break;
			                case "DECREMENT":
			                    valueToBeChanged--;
			                    break;
			                case "PLUS_ASSIGN":
